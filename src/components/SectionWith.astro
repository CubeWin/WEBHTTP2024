---
import BtnOutline from '../components/BtnOutline.astro'
import CardSkill from './CardSkill.astro'

interface items {
    image: string
    title: string
}
interface Props {
    title: string
    items: Array<items>
    url: string
}

const { title, items, url } = Astro.props
---

<section class='text-white container mx-auto p-1 px-4 text-center min-h-screen flex justify-center items-center flex-col'>
    <h2 class='text-3xl font-bold text-white mb-8 font-["Audiowide"]'>
        {title}
    </h2>
    <div class='content !flex flex-wrap justify-center items-center'>
        {
            items.length > 0 &&
                items.map((item) => (
                    <CardSkill
                        title={item.title}
                        bg='bg-gradient-to-br from-amber-600 via-70% via-yellow-300 to-amber-700'
                        border=''
                        color='text-slate-700'
                        image={item.image}
                    />
                ))
        }
    </div>
    <div class='w-full !flex justify-center items-center my-5'>
        <BtnOutline body='Revisar CÃ³digo' url={url} icon='fa-external-link' />
    </div>
</section>
