---
interface Props {
    color: string
    bg: string
    border: string
    text: string
    url: string
}

const { bg, color, text, border, url } = Astro.props
---

<a
    class=`rounded px-3 py-1 cursor-pointer border ${border} bg-transparent
    hover:${bg} transition-colors duration-500 ease-in-out ${color} text-sm
    font-semibold !flex justify-center items-center`
    href=`${url}`
>
    {text}
</a>
