---
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='es'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="./css/font-awesome.min.css">
	</head>
	<body>
		<div class="bg_web p-0 m-0 h-0"></div>
		<main class="lg:max-w-6xl mx-auto">
			<slot />
		</main>
	</body>
</html>
<style is:global>
	.bg_web::after {
		position: fixed;
		content: '';
		width: 100%;
		height: 100vh;
		background: radial-gradient(circle, rgba(0, 103, 188, 1) 0%, rgba(50, 68, 130, 1) 51%, rgb(10, 8, 19) 100%);
		z-index: -1;
	}
</style>
